<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Bidsy</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>   
  </welcome-file-list>
  
  <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>main.java.com.BidsyJava.Login</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping> 
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>main.java.com.BidsyJava.Logout</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>main.java.com.BidsyJava.Signup</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>employeeRegister</servlet-name>
        <servlet-class>main.java.com.BidsyJava.EmployeeRegister</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>employeeRegister</servlet-name>
        <url-pattern>/employeeRegister</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>sellItem</servlet-name>
        <servlet-class>main.java.com.BidsyJava.SellItem</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>sellItem</servlet-name>
        <url-pattern>/sellItem</url-pattern>
    </servlet-mapping>
    
</web-app>